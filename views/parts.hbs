<h1>Parts</h1>

<div class="content">
    <div class="table-container">
        {{!-- Create a table --}}
        <table id="parts-table" role="grid">

            {{!-- Header section --}}
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Manufacturer</th>
                <th>Associated Manual</th>
                <th>Storeroom Number</th>
                <th>Notes</th>
                <th>Actions</th> <!-- Added column for actions like delete -->
            </tr>
            </thead>

            {{!-- Body section --}}
            <tbody>
            {{!-- For each row, print the attributes in order --}}
            {{#each data}}
                <tr>
                    <td>{{this.partID}}</td>
                    <td>{{this.partName}}</td>
                    <td>{{this.manufacturerName}}</td>
                    <td>{{this.manualName}}</td>
                    <td>{{this.storeroomNumber}}</td>
                    <td>{{this.partNotes}}</td>
                    <td>
                        <!-- Add buttons for actions -->
                        <button onclick="deleteParts({{this.partID}})">Delete</button>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>

    <div class="forms-container">
        {{!-- Form for Adding New Part --}}
        <h2>Add</h2>
        <form id="add-parts-form-ajax">
            <label for="input-part-name">Name:</label>
            <input type="text" id="input-part-name" name="partName"><br>

            {{!-- <label for="input-part-manufacturer">Part Manufacturer:</label>
