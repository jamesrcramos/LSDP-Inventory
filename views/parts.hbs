                {{/each}}
            </select>

            <label for="input-storeroom-number">Storeroom Number:</label>
            <input type="number" id="input-storeroom-number" name="storeroomNumber"><br>

            <label for="input-part-notes">Notes:</label>
            <input type="text" id="input-part-notes" name="partNotes"><br>

            <input type="submit" value="Add New Part">
        </form>

