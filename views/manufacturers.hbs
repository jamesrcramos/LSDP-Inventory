<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<h1>Manufacturers</h1>

<div class="content">
    <div class="table-container">
        <!-- Table for Displaying Manufacturers -->
        <table id="manufacturers-table" role="grid">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {{#each data}}
                <tr data-value="{{this.manufacturerID}}">
                    <td>{{this.manufacturerID}}</td>
                    <td>{{this.manufacturerName}}</td>
                    <td>{{this.manufacturerPhone}}</td>
                    <td>{{this.manufacturerEmail}}</td>
                    <td>{{this.manufacturerNotes}}</td>
                    <td>
                        <!-- Actions like Delete or Edit -->
                        <button onclick="deleteManufacturer({{this.manufacturerID}})">Delete</button>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>

    <div class="forms-container">
        <!-- Form for Adding New Manufacturer -->
        <h2>Add</h2>
        <form id="add-manufacturer-form-ajax">
            <label for="input-manufacturer-name">Name:</label>
            <input type="text" id="input-manufacturer-name" name="manufacturerName"><br>

            <label for="input-manufacturer-phone">Phone:</label>
            <input type="text" id="input-manufacturer-phone" name="manufacturerPhone"><br>

            <label for="input-manufacturer-email">Email:</label>
            <input type="email" id="input-manufacturer-email" name="manufacturerEmail"><br>

            <label for="input-manufacturer-notes">Notes:</label>
            <input type="text" id="input-manufacturer-notes" name="manufacturerNotes"><br>

            <input type="submit" value="Add New Manufacturer">
        </form>
    </div>
</div>

<!-- Embed our javascript to handle the DOM manipulation and AJAX request -->
<script src="./js/add_manufacturers.js"></script>
<script src="./js/delete_manufacturers.js"></script>